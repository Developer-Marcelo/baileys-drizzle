    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "baileys": "^7.0.0-rc.9",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4"
  },
  "overrides": {
    "esbuild": "0.25.0"
  }
