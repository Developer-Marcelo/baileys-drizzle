    "baileys-clean-architecture",
    "whatsapp-session",
    "whatsapp-multi-session",
    "signal-protocol",
    "drizzle",
    "drizzle-orm",
    "postgres",
    "nodejs",
    "typescript",
    "clean-architecture",
    "ddd",
    "for-beginners"
  ],
  "author": "Marcelo P. S. P. <desenvolvedoreasycode@gmail.com> (https://github.com/developer-marcelo)",
  "repository": {
    "type": "git",
    "url": "https://github.com/Developer-Marcelo/baileys-beginner-drizzle"
  },
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
