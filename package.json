  "sessao-whatsapp",
  "whatsapp-multidevice",
  "multi-instancia",
  "multi-instance",
  "drizzle",
  "drizzle-orm",
  "orm",
  "database",
  "typescript",
  "nodejs",
  "whatsapp-automation"
],
  "author": "Marcelo P. S. P. <desenvolvedoreasycode@gmail.com> (https://github.com/developer-marcelo)",
